{
  "name": "abb-terminal-insight",
  "version": "0.1.0",
  "description": "Application for managing driver's information, trucks load/unload status and geolocation.",
  "keywords": [
    "axios",
    "react",
    "reactjs",
    "cordova",
    "redux",
    "reselect",
    "webpack",
    "babel",
    "scss",
    "sass",
    "scss/sass",
    "styled-components",
    "prettier",
    "stylelint",
    "husky",
    "cross-env",
    "jest",
    "enzyme"
  ],
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@types/classnames": "^2.2.9",
    "@types/node": "^12.11.1",
    "@types/react": "^16.9.6",
    "@types/react-dom": "^16.9.2",
    "@types/react-redux": "^7.1.5",
    "@types/react-router": "^5.1.2",
    "@types/react-router-dom": "^5.1.0",
    "@types/redux-logger": "^3.0.7",
    "@types/redux-saga": "^0.10.5",
    "@types/styled-components": "^4.1.20",
    "axios": "^0.19.0",
    "classnames": "^2.2.6",
    "d3": "^5.12.0",
    "moment": "^2.24.0",
    "node-sass": "^4.12.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-faux-dom": "^4.5.0",
    "react-grid-layout": "^0.16.6",
    "react-redux": "^7.1.1",
    "react-resize-detector": "^4.2.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "react-select": "^3.0.8",
    "react-tooltip": "^3.11.1",
    "reactjs-popup": "^1.5.0",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.1",
    "reselect": "^4.0.0",
    "styled-components": "^4.4.0"
  },
  "scripts": {
    "start:local": "react-scripts start",
    "start:dev": "REACT_APP_ENV=dev react-scripts start",
    "build": "REACT_APP_ENV=prod react-scripts build",
    "test": "yarn code:lint && yarn stylelint:fix && cross-env CI=true react-scripts test --env=jsdom --colors --coverage",
    "code:lint": "prettier --c \"src/**/*.*(js|ts|tsx)\" --write",
    "stylelint:check": "stylelint '**/*.scss' --config './.stylelintrc' --config-basedir './src' --syntax 'scss' --formatter 'verbose'",
    "stylelint:fix": "stylelint '**/*.scss' --config './.stylelintrc' --config-basedir './src' --syntax 'scss' --fix --formatter 'verbose'",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn code:lint && yarn stylelint:fix",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/serviceWorker.ts",
      "!src/react-app-env.d.ts",
      "!src/index.tsx",
      "!src/api/api.conf.tsx",
      "!src/redux/root-reducer.ts",
      "!src/redux/store.ts",
      "!src/**/*.styles.ts",
      "!src/theme/**/*",
      "!src/redux/root-saga.ts",
      "!src/redux/saga-testing.utils.ts",
      "!src/shared/models/**/*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.19",
    "@types/react-test-renderer": "^16.9.1",
    "@types/redux-mock-store": "^1.0.1",
    "cross-env": "^6.0.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.2",
    "eslint": "^6.5.1",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "prettier": "1.18.2",
    "react-test-renderer": "^16.10.2",
    "redux-mock-store": "^1.5.3",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.11.1",
    "ts-jest": "^24.1.0"
  }
}
